package com.lv.utils{	/**	 * @author kafeichong	 */	public class lvNumber	{		/*		 * 说明：判断数字是否为一位或两位数字，小于10，加“0”   返回 String		 */		public static function formatNumber(time:Number):String		{			var str:String = time.toString();			if ((time < 10))			{				str = '0' + str;			}			return str;		}		/*		获取带有小数点后面的字符		*/		public  function getDecimals(str:String,beginNum:int=0,lengthNum:int=1):String		{			var tempStr:String;			var tempAry:Array = str.split(".");			return tempStr = String(tempAry[1]).substr(beginNum,lengthNum);		}	}}